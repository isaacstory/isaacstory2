{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PDF to Markdown Output",
  "description": "Schema for Claude CLI output when converting PDF to markdown",
  "type": "object",
  "required": ["markdown", "metadata"],
  "properties": {
    "markdown": {
      "type": "string",
      "description": "The complete markdown content extracted from the document",
      "minLength": 50
    },
    "metadata": {
      "type": "object",
      "required": ["document_date", "provider", "record_count"],
      "properties": {
        "document_date": {
          "type": "string",
          "description": "Document date in YYYY-MM-DD format",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "provider": {
          "type": "string",
          "description": "Provider or lab name"
        },
        "record_count": {
          "type": "integer",
          "description": "Number of records/results extracted",
          "minimum": 0
        },
        "has_abnormal": {
          "type": "boolean",
          "description": "Whether any abnormal values were found"
        },
        "language": {
          "type": "string",
          "description": "Document language (pt or en)",
          "enum": ["pt", "en"]
        },
        "subcategory": {
          "type": "string",
          "description": "More specific category (e.g., Hemograma, OAT)"
        }
      }
    }
  }
}
